pipeline {
    agent any // Runs on your Mac

    tools {
        jdk 'JDK 17'
        maven 'Maven 3.8'
    }

    stages {
        // --- DELETE THE OLD "Checkout Code" STAGE ---
        // Jenkins already checked out the code by this point.

        stage('Build') {
            steps {
                echo 'Building the Spring Boot application...'
                // We must tell Maven where the pom.xml is, since it's in a subdirectory
                sh 'mvn -f showtime-backend/pom.xml clean package -DskipTests'
            }
        }

        stage('Archive Artifacts') {
            steps {
                echo 'Archiving the .jar file...'
                // The .jar file is inside the showtime-backend/target folder
                archiveArtifacts artifacts: 'showtime-backend/target/*.jar', fingerprint: true
            }
        }
    }
}